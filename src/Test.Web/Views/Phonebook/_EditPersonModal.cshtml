@using Test.Web.Models.Common.Modals
@model CTC.Web.Models.Phonebook.ViewModel.EditPersonModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditPerson")))
<div class="modal-body">
    <form name="PersonEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Person.Id" />
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-user-details">
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="name" type="text" name="Name" value="@Model.Person.Name" required maxlength="100" class="validate form-control">
                                <label for="name" class="form-label">@L("Nome")</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="surname" type="text" name="Surname" value="@Model.Person.Surname" required maxlength="100" class="validate form-control">
                                <label for="surname" class="form-label">@L("Cognome")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="email" type="email" name="EmailAddress" value="@Model.Person.EmailAddress" maxlength="100" class="validate form-control">
                                <label for="email" class="form-label">@L("EmailAddress")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="TelephoneNumber" value="@Model.Person.TelephoneNumber" class="form-control" required maxlength="100">
                                <label class="form-label">@L("TelephoneNumber")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.Label(L("TipoContatto"))
                                @Html.DropDownListFor(
                                    m => m.Person.TipoContatto,
                                    Model.TipiContatto,
                                    new
                                    {
                                        @class = "form-control",
                                        id = "TipoContattoCombobox"
                                    })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
<script src="~/Views/Phonebook/_EditPersonModal.js"></script>